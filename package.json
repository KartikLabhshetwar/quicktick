{
  "name": "quicktick",
  "displayName": "QuickTick",
  "description": "Automatically converts quotes to backticks when typing template literals",
  "version": "0.0.1",
  "publisher": "kartiklabhshetwar",
  "repository": {
    "type": "git",
    "url": "https://github.com/KartikLabhshetwar/quicktick.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other",
    "JavaScript",
    "TypeScript"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/src/extension.js",
  "tags": [
    "template literal",
    "converter",
    "quotes",
    "backticks",
    "javascript",
    "typescript",
    "auto",
    "autoconverter",
    "string",
    "string template"
  ],
  "contributes": {
    "commands": [
      {
        "command": "quicktick.toggleAutoConvert",
        "title": "Toggle Auto-Convert",
        "category": "Template String Converter"
      },
      {
        "command": "quicktick.test",
        "title": "Test Conversion",
        "category": "QuickTick"
      }
    ],
    "configuration": {
      "title": "QuickTick",
      "properties": {
        "quicktick.enableAutoConvert": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic conversion when typing template literals"
        },
        "quicktick.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when conversions are made"
        },
        "quicktick.supportedLanguages": {
          "type": "array",
          "default": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
          "description": "File types to monitor for conversions"
        },
        "quicktick.showWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show welcome message when extension is activated"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.0",
    "mocha": "^10.0.0",
    "typescript": "^4.9.4"
  }
}
